<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder_popup"
    tools:context=".TaskerMain"
    android:focusable="false"
    android:gravity="center_vertical|center_horizontal"
    android:padding="@dimen/spacer_size_35">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/configOnTheScreen"
        android:enabled="true"
        android:editable="false"
        android:background="@drawable/putonaborderrectangle"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:width="@dimen/spacer_size_900"
        android:focusable="false"
        android:gravity="top"
        android:layout_marginLeft="@dimen/spacer_size_45"
        android:layout_marginRight="@dimen/spacer_size_45"
        android:layout_marginTop="@dimen/spacer_size_70"
        android:layout_above="@+id/saveConfig"
        android:padding="@dimen/spacer_size_25"
        android:layout_marginBottom="@dimen/spacer_size_50"
        android:scrollbars="vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Show Saved Configuration Values"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_dark" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hideConfigView"
        android:src="@drawable/exiticon_larger"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shareConfig"
        android:src="@drawable/mailiticon"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/saveConfig"
        android:layout_marginRight="@dimen/spacer_size_45" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveConfig"
        android:src="@drawable/saveicon"
        android:layout_alignTop="@+id/shareConfig"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/events_48"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
